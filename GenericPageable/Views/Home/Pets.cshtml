@model PaginatedList<IThing>

@{
    ViewData["Title"] = "Pets";
}

<div class="container">
    <h1 class="display-4">
        <i class="fas fa-cat"></i>
        @ViewData["Title"]
    </h1>

    <hr />

    <div class="my-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-backward"></i> Home
        </a>
    </div>

    <div class="my-2">
        <span class="mr-3">Filters: </span>
        <a asp-controller="Home" asp-action="Pets" asp-route-page="1" class="btn btn-info mr-2">All</a>
        <a asp-controller="Home" asp-action="Pets" asp-route-page="1" asp-route-orderBy="evens" class="btn btn-info mr-2">Evens</a>
        <a asp-controller="Home" asp-action="Pets" asp-route-page="1" asp-route-orderBy="odds" class="btn btn-info">Odds</a>
    </div>

    <ul class="list-group">
        @foreach (var item in Model)
        {
            <li class="list-group-item">
                <span class="badge badge-primary badge-pill mr-2">@item.Id</span>
                @item.Name
            </li>
        }
    </ul>

    <vc:pager pageable="@Model"></vc:pager>
</div>